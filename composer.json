{
    "version": "dev-main",
    "name": "shipmonk/packing",
    "description": "Testing day application stub",
    "require": {
        "ext-pdo": "*",
        "ext-json": "*",
        "php": ">=8.4",
        "psr/http-message": "2.*",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "guzzlehttp/guzzle": "^7.9",
        "guzzlehttp/psr7": "2.*",
        "doctrine/orm": "3.*",
        "symfony/cache": "7.*",
        "symfony/var-exporter": "7.*",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "zircote/swagger-php": "^6.0",
        "monolog/monolog": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.59"
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix --dry-run --diff --using-cache=no",
        "cs:fix": "vendor/bin/php-cs-fixer fix --using-cache=no",
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-text",
        "stan": "vendor/bin/phpstan analyse src tests --level=9",
        "ci": [
            "@cs",
            "@stan",
            "@test"
        ]
    }
}
